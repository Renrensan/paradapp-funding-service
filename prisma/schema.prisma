generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

model Transaction {
  id             String             @id @default(cuid())
  type           TransactionType
  status         TransactionStatus  @default(WAITING)
  tokenAmount    Float?
  tokenType      TokenType    
  idrAmount      Int?               
  walletAddress  String
  paymentDetails Json?              
  txHash         String?            
  cexTxId        String?            @unique
  refAddress     String?
  refAmount      Float?
  xenditTxId     String?            @unique
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

}


enum TransactionType {
  DEPOSIT
  WITHDRAWAL
}

enum TokenType {
  BTC
  HBAR
}


enum TransactionStatus {
  WAITING
  PENDING
  PAID
  COMPLETED
  FAILED
  EXPIRED
}
